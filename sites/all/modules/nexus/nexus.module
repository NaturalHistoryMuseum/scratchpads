/** 
* Implementation of hook_access(). 
*/ 
function nexus_access($op, $node = null, $account = null) { 
  
$is_author = $account->uid == $node->uid; 

  switch ($op) { 
    
    case 'view': 
  
    return user_access('view nexus projects');
  
    case 'create': 

    return user_access('create nexus projects', $account); 

    case 'update': 
 
    return (user_access('edit own nexus projects', $account) && $is_author) 
      || user_access('edit any nexus projects', $account) 
      || user_access('administer nodes', $account); // need this to match callbacks with node edit perms

    case 'delete': 

    return (user_access('delete own nexus projects', $account) && $is_author) 
      ||  user_access('delete any nexus projects', $account); 

  } 
  
} 


