/**
 * Validate form - remove errors for state data if free_state is selected 
 */
function nexus_character_form_validate($form, &$form_state){
  
  // This variable is set in the add state callback - do not validate if true
  if(!$form_state['ahah_state_submit']){
    
    if(empty($form_state['values']['name'])){
      
      form_set_error('name', t('Please enter a name for the character'));
      
    }
  
    if(!$form_state['values']['character_group']){
    
      if(empty($form_state['values']['new_group'])){
      
        form_set_error('new_group', t('Please enter a name for the new character group'));
      
      }
      
    }
    
    if($form_state['values']['type'] == 'controlled'){
      
      $valid_states = 0;
      
      if(count($form_state['post']['states'])){
       
        foreach($form_state['post']['states'] as $state){

          if($state['state']){
            $valid_states++;
          }

        }
        
      }
      
      if(!$valid_states){
        form_set_error('type', t('You must enter at least one state for controlled characters.'));
      }
      
      
    }

  }

   
}


function nexus_character_form_submit($form, &$form_state){
  
  // So we know the form passed validation
  $form_state['validated'] = true;
  
  global $user;
  
  // Make the changes we want to the form state.
  if ($form_state['values']['add_state']) {
    $form_state['states_count'] = count($form_state['values']['choice']) + 1;
  }
  
  $project_nid = $form_state['values']['project_nid'];
  $character_tid = $form_state['values']['character_tid'];
  
  if($character_tid){
    
    $character_term = (array) taxonomy_get_term($character_tid);
    
  }else{
    
    $character_term = array();
    
  }
  

  $character_vid = nexus_get_character_vid();
  
  $character_root_tid = nexus_get_project_character_root_tid($project_nid);


  if($form_state['values']['character_group']){
    
    $parent_tid = $form_state['values']['character_group'];
    
    // If there's no items in group, add it to the end of the group list
    $items_in_group = taxonomy_get_children($parent_tid);
    
    if(!count($items_in_group)){
      
      $group_term = (array) taxonomy_get_term($parent_tid);
      
      $group_term['weight'] = 1 + nexus_get_max_weight_of_child_term($character_root_tid);
      $group_term['parent'] = $character_root_tid;
      
      taxonomy_save_term($group_term);
      
    }

    
  }else{
    
    $group_weight = 1 + nexus_get_max_weight_of_child_term($character_root_tid);
    
    $group_term = array(
      'name' => $form_state['values']['new_group'],
      'parent' =>$character_root_tid,
      'vid' => $character_vid,
      'weight' => $group_weight 
    );

    taxonomy_save_term($group_term);
    
    $parent_tid = $group_term['tid'];
    
    // Need to add a new option to the group form, so save the new term
    $form_state['new_group_term'] = $group_term;
    
  }
    
  // Update the character
  
  $character_term['name'] = $form['#post']['name'];
  $character_term['description'] = $form['#post']['description'];
  $character_term['vid'] = $character_vid;
  $character_term['parent'] = $parent_tid;

  if(!$character_tid){
    
    $character_term['weight'] = nexus_get_max_weight_of_child_term($parent_tid) + 1;   
    
  }

  taxonomy_save_term($character_term);
  
  $nexus_existing_states_to_remove = nexus_get_states_for_character($character_tid); 

  // What type of character is this?
  switch($form_state['values']['type']){
    
    case 'controlled':
    // If controlled, loop through all the states and save the state nodes
    
      if(count($form_state['post']['states'])){
        
        $weight = 0;
          
        foreach($form_state['post']['states'] as $state){

          if(!$state['state']){
            continue;
          }
          
          if(is_numeric($state['nid'])){
            $state_node = node_load($state['nid']);
            unset($nexus_existing_states_to_remove[$state['nid']]);            
          }else{
            $state_node = new stdClass();
            $state_node->uid = $user->uid;
            $state_node->type = 'nexus_controlled_state';
            $state_node->status = 1;
            $state_node->name = $user->name;
            $state_node->taxonomy = array($character_vid => $character_term['tid']);
          }
           
          $state_node->title = $state['state'];
          $state_node->body = $state['state_description'];
          $state_node->node_weight = $weight;
          
          node_save($state_node);
          
          $weight++;
      
        }
        
      }
      
      nexus_delete_term_setting($character_term['tid'], 'numeric');
      
      nexus_delete_free_states($character_term['tid']);
      
    
    break;
    
    case 'numeric':
    
      nexus_update_term_setting($character_term['tid'], 'numeric', 1);      
    
      // If this has been changed to numeric from text, we need to delete all non numeric free states
      if($form['type']['#default_value'] == 'text'){
        
        nexus_delete_free_states($character_term['tid'], true);
        
      } 

    
    break;
    
    case 'text':
      
      // If it was numeric, delete from the numeric table
      nexus_delete_term_setting($character_term['tid'], 'numeric');
      
    break;

    
  }
  
  // If there's any exisitng state nodes we're not using, delete them
  if(count($nexus_existing_states_to_remove)){
    
    nexus_delete_nodes($nexus_existing_states_to_remove);
    
  }
  
  // Clear mesage queue
  drupal_get_messages();
  
  if($character_tid){
    
    drupal_set_message('Character updated');
    
  }else{
    
    drupal_set_message('Created new character');
    
  }

  
}

/**
 * Delete nodes
 */
function nexus_delete_nodes($nodes){
  
  if(count($nodes)){

    foreach($nodes as $node){

      if($node->nid){
        
        node_delete($node->nid);
        
      }elseif($node['nid']){
      
        node_delete($node['nid']);
        
      }
      

    }
    
  }
  
}

/**
 * Delete any free state nodes which aren't numeric
 */
function nexus_delete_free_states($character_tid, $numeric_only = false){
  
  $nexus_free_states = nexus_get_states_for_character($character_tid, 'nexus_free_state');
  
  if(count($nexus_free_states)){
    
    foreach($nexus_free_states as $nexus_free_state){
            
      if($numeric_only && is_numeric($nexus_free_state->body)){
        continue;
      }  
        
      node_delete($nexus_free_state->nid);
      
    }
    
  }
  
}


function nexus_note_node_form_submit($form, &$form_state){
  
  // These values are being set with JS so are getting lost in the submission process
  $note_nid = $form['#post']['note_nid'];
  $character_tid = $form['#post']['character_tid'];
  $taxa_tid = $form['#post']['taxa_tid'];
  
  if($note_nid && !strlen($form_state['values']['body'])){ // Is there a nid (does a note already exist)?
      
    node_delete($note_nid);
    drupal_set_message('Note deleted');
    
    $form_state['op'] = 'delete';
    
  }else{
    
    if(is_numeric($note_nid)){
      
      $node = node_load($note_nid);
      
      $node->body = $form_state['values']['body'];
      
      drupal_set_message('Note updated');
      
    }else{
    
      $node = (object) $form_state['values'];

      $character_term = taxonomy_get_term($character_tid);
      $taxa_term = taxonomy_get_term($taxa_tid);
      
      // Auto generate title
      $node->title = 'NOTE: '.$taxa_term->name.' ('.$character_term->name.')';

      // Format the taxonomies
      $node->taxonomy = array(
        $character_term->vid = $character_term->tid,
        $taxa_term->vid = $taxa_term->tid,
      );
      
      drupal_set_message('Note created');
    
    }


    node_save($node);
    
    $form_state['op'] = 'updated';
    $form_state['new_note'] = array('nid' => $node->nid, 'body' => $node->body);
    
 
  }  
  

  
}


