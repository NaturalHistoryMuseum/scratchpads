function nexus_get_character_groups($character_root_tid){
  
  $sql = 'SELECT td.tid, td.name  
     FROM {term_data} td 
     INNER JOIN {term_hierarchy} th ON th.tid = td.tid 
     WHERE th.parent = %d';

   $result = db_query(db_rewrite_sql($sql), $character_root_tid);

   while ($term = db_fetch_object($result)) {

     $character_groups[$term->tid] = $term->name;

   }

   return $character_groups;
  
}


  

