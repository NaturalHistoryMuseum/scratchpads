function emonocot_form_alter(&$form, &$form_state){
  if($form['#id'] == 'node-form' && $form['type']['#value'] == 'spm'){
    drupal_add_js(drupal_get_path('module', 'emonocot') . '/em_spm.js');
    //play with the fields and stuff them into tabs
    $em_spm_fields = emonocot_spm_field_info();
    foreach($em_spm_fields as $em_spm_field){
      if(isset($form[$em_spm_field['group']][$em_spm_field['field_name']])){
        //Shift into tabs
        $form['tabs'][$em_spm_field['group']][$em_spm_field['field_name']] = $form[$em_spm_field['group']][$em_spm_field['field_name']];
        unset($form[$em_spm_field['group']][$em_spm_field['field_name']]);
        //Use wysiwyg editor
        $form['tabs'][$em_spm_field['group']][$em_spm_field['field_name']]['format']['#parent'] = $em_spm_field['field_name'];
      }else if(isset($form[$em_spm_field['field_name']])){
        $form['tabs'][$em_spm_field['group']][$em_spm_field['parent_wrapper']][$em_spm_field['field_name']] = $form[$em_spm_field['field_name']];
        unset($form[$em_spm_field['field_name']]);
      }
    }
    //Also unset groups so no empty fieldsets shown
    $em_spm_groups = emonocot_spm_group_info();
    foreach($em_spm_groups as $em_spm_group){
      unset($form[$em_spm_group['group_name']]);
    }
  }
}

function emonocot_node_page_default(){
  $result = pager_query(db_rewrite_sql('SELECT n.nid, n.sticky, n.created FROM {node} n WHERE n.promote = 1 AND n.status = 1 ORDER BY n.sticky DESC, n.created DESC'), variable_get('default_nodes_main', 10));
  $output = '';
  $num_rows = FALSE;
  while($node = db_fetch_object($result)){
    $output .= node_view(node_load($node->nid), 1);
    $num_rows = TRUE;
  }
  if($num_rows){
    $feed_url = url('rss.xml', array(
      'absolute' => TRUE
    ));
    drupal_add_feed($feed_url, variable_get('site_name', 'Drupal') . ' ' . t('RSS'));
    $output .= theme('pager', NULL, variable_get('default_nodes_main', 10));
  }else{
    if(user_access('create type content')){
      $output = emonocot_taskguide();
    }else{
      $output = '<div id="first-time" style="background-color:white;border:1px solid #e0e5fb; padding: 20px;">' . t('<h1 class="title">Welcome to your new eMonocot Scratchpad</h1><p>Once logged-in you\'ll be confronted by our Task guide which will help you get started with your site.</p><p>Further help is available from <a href="http://scratchpads.eu/" target="_blank">http://scratchpads.eu/</a>.</p></div>') . '</div>';
    }
  }
  drupal_set_title('');
  return $output;
}

