      // Modification -- Get the gid from the variable instead of trying to calculate it.
      if (isset($_REQUEST['gids'])) {
        $location = 131;
        $gids = $_GET['gids'];
        $gid = intval(current($_REQUEST['gids']));
      }
    }

    // og create nodes (custom node/20 aliased to node/ognodeadd)
