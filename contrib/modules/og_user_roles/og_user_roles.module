    if (arg(0) == 'og' && arg(1) == 'users' && is_numeric(arg(2)) && is_null(arg(4))) {
      $location = 63;
      $gid = (int)arg(2);
    }

    // og unsubscribe
    // og_user_roles
    //
    // This is sort of a catch all for "og" and gid in this order
